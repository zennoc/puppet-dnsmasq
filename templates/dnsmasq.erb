#File Managed by Puppet
<% if bool_local_only %>
listen-address=127.0.0.1
<% else %>
#To use set local_only => true
#listen-address=127.0.0.1
<% end %>
# server => ['8.8.8.8', '8.8.4.4']
<% scope.lookupvar('dnsmasq::array_servers').each do |dns| %>server=<%= dns %>
<% end %>
cache-size=<%= cache_size %>
<% if bool_no_negcache %>
no-negcache
<% else %>
#To use set local_only => true
#no-negcache
<% end %>